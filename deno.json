{
  "tasks": {
    "dev": "deno run --allow-all scripts/watch.ts",
    "build": "deno run --allow-all scripts/build.ts",
    "build:dev": "deno run --allow-all scripts/build.ts --dev",
    "test": "deno test --allow-all",
    "test:coverage": "deno test --allow-all --coverage=coverage/ && deno coverage coverage/",
    "test:watch": "deno test --allow-all --watch",
    "test:e2e": "playwright test",
    "test:e2e:wsl2": "xvfb-run --auto-servernum --server-args=\"-screen 0 1280x960x24\" playwright test",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "bundle": "deno task build && deno run --allow-all scripts/bundle.ts",
    "setup-hooks": "deno run --allow-run --allow-read scripts/setup-hooks.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true,
    "types": ["./src/shared/types/chrome.d.ts"]
  },
  "imports": {
    "preact": "npm:preact@^10.28.3",
    "preact/": "npm:preact@10.28.3/",
    "preact/hooks": "npm:preact@^10.28.3/hooks",
    "@preact/signals": "npm:@preact/signals@^2.0.0",
    "marked": "npm:marked@^17.0.0",
    "marked-highlight": "npm:marked-highlight@^2.2.3",
    "mermaid": "npm:mermaid@^11.12.3",
    "xss": "npm:xss@^1.0.15",
    "highlight.js": "npm:highlight.js@^11.11.1",
    "highlight.js/": "npm:highlight.js@11.11.1/",
    "mathjax-full/js/": "npm:mathjax-full@^3.2.2/js/",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@fontsource/inter": "npm:@fontsource/inter@^5.2.8",
    "@fontsource/jetbrains-mono": "npm:@fontsource/jetbrains-mono@^5.2.8",
    "esbuild": "npm:esbuild@^0.27.0",
    "esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@types/chrome": "npm:@types/chrome@^0.1.36",
    "@playwright/test": "npm:@playwright/test@^1.58.2",
    "@types/node": "npm:@types/node@^25.2.3"
  },
  "exclude": ["dist/", "node_modules/", "coverage/", "example/"]
}
