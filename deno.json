{
  "tasks": {
    "dev": "deno run --allow-all scripts/watch.ts",
    "build": "deno run --allow-all scripts/build.ts",
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "test:e2e": "playwright test",
    "test:e2e:wsl2": "xvfb-run --auto-servernum --server-args=\"-screen 0 1280x960x24\" playwright test",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "bundle": "deno task build && deno run --allow-all scripts/bundle.ts",
    "setup-hooks": "deno run --allow-run --allow-read scripts/setup-hooks.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true
  },
  "imports": {
    "preact": "npm:preact@^10.19.0",
    "preact/": "npm:preact/",
    "preact/hooks": "npm:preact@^10.19.0/hooks",
    "@preact/signals": "npm:@preact/signals@^1.2.0",
    "marked": "npm:marked@^11.0.0",
    "marked-highlight": "npm:marked-highlight@^2.0.0",
    "mermaid": "npm:mermaid@^11.12.2",
    "dompurify": "npm:dompurify@^3.0.0",
    "xss": "npm:xss@^1.0.15",
    "highlight.js": "npm:highlight.js@^11.9.0",
    "highlight.js/": "npm:highlight.js/",
    "mathjax-full/js/": "npm:mathjax-full@^3.2.2/js/",
    "@std/yaml": "jsr:@std/yaml@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@fontsource/inter": "npm:@fontsource/inter@^5.0.0",
    "@fontsource/jetbrains-mono": "npm:@fontsource/jetbrains-mono@^5.0.0",
    "esbuild": "npm:esbuild@^0.20.1",
    "esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@types/chrome": "npm:@types/chrome@^0.0.254",
    "@playwright/test": "npm:@playwright/test@^1.40.0",
    "@types/node": "npm:@types/node@^20.0.0"
  },
  "exclude": ["dist/", "node_modules/", "coverage/"]
}
